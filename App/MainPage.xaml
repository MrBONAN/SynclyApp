<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="LogInBtn"
                Text="Войти в Spotify" 
                SemanticProperties.Hint="Log in button"
                Clicked="Authenticate"
                HorizontalOptions="Fill" />
            
            <Button
                x:Name="SearchBtn"
                Text="Найти трек" 
                SemanticProperties.Hint="Search track button"
                Clicked="FindTrack"
                HorizontalOptions="Fill" />
            
            <Button
                x:Name="SaveDateTimeBtn"
                Text="Сохранить текущее время" 
                SemanticProperties.Hint="Save current date in SecureStorage"
                Clicked="SaveCurrentTime"
                HorizontalOptions="Fill" />
            
            <Button
                x:Name="GetSavedTimeBtn"
                Text="Получить сохранённое время" 
                SemanticProperties.Hint="Restore saved date from SecureStorage"
                Clicked="DisplaySavedTime"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
