<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="LogInBtn"
                Text="Войти в Spotify" 
                SemanticProperties.Hint="Log in button"
                Clicked="Authenticate"
                HorizontalOptions="Fill" />
            
            <Button
                x:Name="SearchBtn"
                Text="Найти трек" 
                SemanticProperties.Hint="Search track button"
                Clicked="FindTrack"
                HorizontalOptions="Fill" />
            
            <Button
                x:Name="TopTracksBtn"
                Text="Получить топ 10 треков пользователя" 
                SemanticProperties.Hint="Get top 10 user tracks"
                Clicked="GetTopTracks"
                HorizontalOptions="Fill" />
            
            <Button
                x:Name="TopAtristsBtn"
                Text="Получить топ 10 исполнителей пользователя" 
                SemanticProperties.Hint="Get top 10 user artists"
                Clicked="GetTopArtists"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
